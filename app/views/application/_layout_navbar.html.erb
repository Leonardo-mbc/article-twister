<!-- Fixed navbar -->
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse" type="button">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Article Twister</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <% if current_user %>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">User:
                        <%= current_user.name %>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li data-pfupdbtn><%= link_to "プロファイル アップデート", profile_update_users_path, remote: true %></li>
                        <li class="divider"></li>
                        <li><a href="/log/out">ログアウト</a></li>
                    </ul>
                    <% else %>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">ログイン／新規登録
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Twitterでログイン／新規登録", user_omniauth_authorize_path(:twitter) %></li>
                        <li><%= link_to "Facebookでログイン／新規登録", user_omniauth_authorize_path(:facebook) %></li>
                        <li>
                            <a data-toggle="modal" href="#user_create-modal">匿名でログイン／新規登録</a>
                        </li>
                    </ul>
                    <% end %>
                </li>
                <% if params[:controller] == 'articles' %>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Articles
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "記事取り込み", picker_articles_path %></li>
                        <li><%= link_to "取込済み記事一覧", imported_list_articles_path %></li>
                        <li><%= link_to "プロファイル ビューアー", tuner_articles_path %></li>
                        <li><%= link_to "評価済み記事一覧", checked_list_articles_path %></li>
                    </ul>
                </li>
                <% end %>
            </ul>
        </div>
        <!--/.nav-collapse -->
    </div>
</div>
